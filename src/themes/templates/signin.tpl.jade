.row
	.col-md-6.col-md-offset-3
		hr
		h3.text-center.text-capitalize Sign in
		hr
		form(name="signInForm", novalidate, ng-submit="authUser(user, signInForm.$valid)")
			.form-group
				label(for="userName") Name
				input(type="text" name="name" ng-model="user.name" id="userName" placeholder="Name" required).form-control
				div.error-box-form(ng-show="signInForm.name.$dirty && signInForm.name.$invalid" ng-messages="signInForm.name.$error")
					p.text-danger(ng-message="required") Please enter a value for this field.
					hr
			.form-group
				label(for="userPassword") Password
				input(type="password" name="password" ng-model="user.password" id="userPassword" placeholder="Password" required).form-control
				div.error-box-form(ng-show="signInForm.password.$dirty && signInForm.password.$invalid" ng-messages="signInForm.name.$error")
					p.text-danger(ng-message="required") Please enter a value for this field.
			hr
			button.btn.btn-primary(ng-disabled="signInForm.$invalid") Sign in