.col-md-8.col-md-offset-2
	.post-edit
		form(name="postEditForm" novalidate ng-submit="editPost(post, postEditForm.$valid)")
			.form-group
				label.control-label(for="editTitle" translate="WRITE_POST_TITLE")
				input#editTitle.form-control(type="text" name="title" ng-model="post.title" required)
				div.error-box-form(ng-show="postEditForm.title.$dirty && postEditForm.title.$invalid" ng-messages="postEditForm.title.$error")
					p.text-danger(ng-message="required" translate="WARNS.REQUIRED_MESS")
					hr
			.form-group
				label.control-label(for="editText" translate="WRITE_POST")
				textarea#editText.form-control.edit-post-text(type="text" name="text" ng-model="post.text" required)
				div.error-box-form(ng-show="postEditForm.text.$dirty && postEditForm.text.$invalid" ng-messages="postEditForm.text.$error")
					p.text-danger(ng-message="required" translate="WARNS.REQUIRED_MESS")
					hr
			.form-group
				label.control-label(for="editTags" translate="WRITE_TAGS")
				input#editTags.form-control(type="text" name="tags" ng-model="post.tags" required)
				div.error-box-form(ng-show="postEditForm.tags.$dirty && postEditForm.tags.$invalid" ng-messages="postEditForm.tags.$error")
					p.text-danger(ng-message="required" translate="WARNS.REQUIRED_MESS")
					hr
			button.btn.btn-primary(translate="SAVE" ng-disabled="postEditForm.$invalid")
