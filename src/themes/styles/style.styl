@import url('https://fonts.googleapis.com/css?family=Open+Sans:400,700,300');

body
	font-family 'Open Sans', sans-serif


.main-nav
	li
		text-transform uppercase

.main-header
	display flex
	justify-content space-between
	align-items center


.logo
	display flex
	flex-grow 0
	align-items center
	h2
		padding 6px 10px
		border 4px solid #57c7ed
		color #57c7ed
		border-left none
		margin 0 0 0 10px
		font-weight bold
		letter-spacing 3px
	&:hover
		text-decoration none
		h2
			background-color #57c7ed
			color #fff
	&:link
		text-decoration none

.error-box-form
	padding-top 12px

.user-item-panel-body
	display flex
	justify-content space-between

.user-item-panel
	margin-bottom 0

.user-list-group-item
	padding 15px

.post-pre-panel
	box-shadow none
	margin-bottom 0

.pre-post-list-group-item
	padding-bottom 0
	padding-left 0
	padding-right 0
	margin-bottom 20px

.pre-post-f-pannel
	margin-right 0

.panel.post-pre-panel
	.panel-heading
		display flex
		align-items center
		justify-content space-between
		border-bottom 1px solid #eee
	.panel-body
		padding 20px 15px
	.panel-footer
		display flex
		align-items center
		justify-content space-between

.author-post
	i.fa-user
		margin-right 6px